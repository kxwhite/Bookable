<div class="navbar navbar-expand-sm navbar-light navbar-bookable">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <img src="<%=asset_path('logo.png')%>">
      <%# use the above to add image on page %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul
        class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="search-navbar">
            <%= form_tag lessons_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            placeholder: "Find a lesson"
            %>
            <%= submit_tag "Search", class: "navbar-button" %>
            <% end %>
          </div>
        <div class="navbar-nav-tabs">
          <li class="nav-item">
            <%= link_to "Home", root_path , class: "nav-link #{controller.controller_name == 'pages' ? 'active' : '' } " %>
          </li>
          <li class="nav-item">
            <%= link_to "Lessons", lessons_path, class: "nav-link #{controller.controller_name == 'lessons' && controller.action_name == 'index' ? 'active' : ''}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Add a lesson", new_lesson_path, class: "nav-link #{controller.controller_name == 'lessons' && controller.action_name == 'new' ? 'active' : ''}" %>
          </li>
        </div>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", bookings_path, class: "dropdown-item" %>
            <%# <%= link_to "My Lessons", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
