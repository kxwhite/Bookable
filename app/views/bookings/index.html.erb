<div class="container">

  <h1>My Profile</h1>

    <h2>My details</h2>
      <div class="card-profile" >
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-square-large" %>
        <div class="card-profile-details">
          <p>First name: <%= @user.first_name %></p>
          <p>Last name: <%= @user.last_name %></p>
          <p>Username: <%= @user.username %></p>
        </div>
      </div>

    <h2>List of lessons booked</h2>


    <% @lessons_booked.each do |booking| %>
      <div class="card-profile-lesson">
        <img src="https://res.cloudinary.com/dab0abars/image/upload/v1644071771/sabrina-wendl-h2NlwNkA2h8-unsplash_oyzmw1.jpg" alt="Rock Climbing">
        <div class="card-profile-lesson-details">
          <p><%= link_to booking.lesson.title, lesson_path(booking.lesson)  %></p>
          <p>Time: <%=  booking.time %></p>
          <p>Date: <%=  booking.date %></p>
        </div>
      </div>
    <% end %>

    <h2>List of lessons created</h2>

    <% @lessons_created.each do |lesson| %>
      <div class="card-profile-lesson">
        <img src="https://res.cloudinary.com/dab0abars/image/upload/v1644071771/sabrina-wendl-h2NlwNkA2h8-unsplash_oyzmw1.jpg" alt="Rock Climbing">
        <div class="card-profile-lesson-details">
        <p><%= link_to lesson.title, lesson_path(lesson)  %></p>
        </div>
      </div>
    <% end %>
