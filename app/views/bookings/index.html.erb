<h1>My Profile</h1>

  <h2>My details</h2>
    <div>
      <p>First name: <%= @user.first_name %></p>
      <p>Last name: <%= @user.last_name %></p>
      <p>Username: <%= @user.username %></p>
    </div>

  <h2>List of lessons booked</h2>

    <% @lessons_booked.each do |booking| %>
      <div class="container">
        <p><%= link_to booking.lesson.title, lesson_path(booking.lesson)  %></p>
        <p>Time: <%=  booking.time %></p>
        <p>Date: <%=  booking.date %></p>
      </div>
    <% end %>

  <h2>List of lessons created</h2>

    <% @lessons_created.each do |lesson| %>
      <div class="container">
        <p><%= link_to lesson.title, lesson_path(lesson)  %></p>
      </div>
    <% end %>
