<div class="show-banner" style="background-image: url('<%= @lesson.picture_url %>')">
</div>

<div class="container">

  <div id="booking-container">

      <div class="info-container">
        <span class="booking-level"><%= @lesson.difficulty_level %></span>
        <h1><%= @lesson.title.capitalize %></h1>
        <p><%= @lesson.description %></p>
        <p><strong>Location: </strong><%= @lesson.location %></p>
      </div>

      <div class="booking-form">

        <h2>Book the lesson</h2>

        <div class="lesson-booking" id='lesson-booking-dates' data-unavailable="<%= @lesson.unavailable_dates.to_json %>">
          <%= simple_form_for [ @lesson, @booking ] do |f| %>
          <%= f.input :date, as: :string, type: :text %>
          <%= f.input :time %>
          <%= f.submit "Book lesson", class: "btn btn-primary" %>
          <% end %>
        </div>

      </div>

  </div>

</div>


