<div class="form-styled">
  <%= simple_form_for(lesson) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.input :difficulty_level, collection: ["Beginner", "Intermediate", "Advanced"] %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
