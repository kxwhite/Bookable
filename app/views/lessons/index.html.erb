<div class="main-container">
  <%# <h1 class="lesson-title">List of available lessons</h1> %>
  <div class="d-flex justify-content-center">
          <div class="search-box">
            <%= form_tag lessons_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            placeholder: "Find a lesson"
            %>
            <%= submit_tag "Search", class: "search-button" %>
            <% end %>
          </div>
  </div>


  <div id="content-container">
    <div class="band">
      <% @lessons.each do |lesson| %>

        <div class="items">
          <%= link_to (lesson), class: "card" do %>
            <%= image_tag "https://res.cloudinary.com/dab0abars/image/upload/v1644159081/Level_1_umvpwp.png", class: "level_1" %>
            <div class="thumb" style="background-image: <%= lesson.picture_url %>;"></div>
            <article>
              <span><%= lesson.difficulty_level %></span>
              <h1><%= lesson.title.capitalize %></h1>
              <p><%= lesson.description %></p>
              <p><strong>Location: </strong><%= lesson.location %></p>
              <div class="coach-info">
                <%= image_tag lesson.user.avatar_url, class: "card-avatar"%>
                <h5 class="card-link"><%= lesson.user.username %></h5>
              </div>
            </article>
          <% end %>
        </div>
      <% end %>
    </div>

    <div id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
